<br><br><br>
<div class="container margin-top">
  <div class="card-panel">
    <h5>New User</h5>
    <%= form_for [:admin, @user] do |f| %>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
        <!-- Show errors -->
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
      <% end %>
      <div class="row">
        <div class="input-field col s10 m8 offset-m2">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 m8 offset-m2">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 m8 offset-m2">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 m8 offset-m2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
        <br>
        <div class="row">
          <%= f.submit "Submit", class: "waves-effect waves-light btn btn-small col offset-m2" %>
          <%= link_to "Cancel", admin_users_path, class: "waves-effect waves-light btn btn-small red col offset-m6" %>
        </div>
      <% end %>
  </div>
</div>
